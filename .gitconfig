[user]
	email = giuseppe@ktz.one
	name = Giuseppe Daniele Consoli

[color]
	interactive = true
	branch = true
	status = true
	ui=true
	diff=auto

[color "diff"]
	meta = blue
	frag = black
	old = red
	new = green

[color "status"]
	added = green
	changed = yellow
	untracked = cyan

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[push]
	default = current

[core]
	editor = vim

[log]
	decorate = short

[alias]
	l = log --graph --oneline
	ll = log --graph --stat
	ld = log --graph --pretty=format:\"%C(yellow)%h%Creset%C(cyan)%C(bold)%d%Creset %C(cyan)(%cr)%Creset %C(green)%ce%Creset %s\"
	st = status --short --branch

